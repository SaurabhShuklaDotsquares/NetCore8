@model TCP.Web.ViewModels.PersonalViewModel
@using TCP.Core.Code.LIBS;
@{
    Layout = null;
}
<form method="post" asp-controller="Dashboard" asp-action="PersonalEdit" id="frm-user-personal">

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label class="req">First Name</label>
                <input type="text" asp-for="FirstName" maxlength="100" placeholder="Enter First Name" class="form-control">
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label class="req">Last Name</label>
                <input type="text" asp-for="LastName" maxlength="100" placeholder="Enter Last Name" class="form-control">
                <span asp-validation-for="LastName" class="text-danger"></span>

            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label class="req">Email</label>
                <input type="email" maxlength="50" asp-for="EmailAddress" placeholder="Enter Your Email" class="form-control">
                <span asp-validation-for="EmailAddress" class="text-danger"></span>

            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label class="req">Phone No.</label>
                <input type="text" asp-for="MobilePhone" maxlength="16" oninput="this.value=this.value.replace(/[^0-9+]/g,'');" placeholder="Enter Phone No." class="form-control">
                <span asp-validation-for="MobilePhone" class="text-danger"></span>

            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label>Date of Birth</label>

                <input type="text" asp-for="@Model.DateofBirth" readonly="readonly" placeholder="DD/MM/YYYY" class="form-control datepicker">

            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label>Address</label>
                <textarea type="text" style="padding-left:5px" asp-for="Address" maxlength="200" class="form-control" placeholder="Enter Your Address"></textarea>
            </div>
        </div>
    </div>
    <hr>
    <div class="btn-block2 text-right">
        <button type="submit" class="btn-custom" id="personal-save">Update</button>
    </div>
</form>

<!-- /.content -->
@await Html.PartialAsync("_ValidationScriptsPartial")
<script src="~/js/custom/dashboard/myprofile.js" asp-append-version="true"></script>
<script>

    $(document).ready(function () {
        if (Global.IsNullOrEmptyString('@Model.DateofBirth')) {
            $("#DateofBirth").val('')
        } else {
            $("#DateofBirth").val('@Model.DateofBirth')
        }

    });
</script>

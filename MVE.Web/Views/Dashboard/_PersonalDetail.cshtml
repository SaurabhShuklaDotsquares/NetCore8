@model TCP.Web.ViewModels.PersonalViewModel
@using TCP.Core.Code.LIBS;
@{
    Layout = null;
}


<div class="info-loop">
    <div class="row">
        <div class="col-md-4">Name</div>
        <div class="col-md-8">@Model.FullName</div>
    </div>
</div>
<div class="info-loop">
    <div class="row">
        <div class="col-md-4">Email</div>
        <div class="col-md-8">@Model.EmailAddress</div>
    </div>
</div>
<div class="info-loop">
    <div class="row">
        <div class="col-md-4">Phone No.</div>
        <div class="col-md-8">@Model.MobilePhone</div>
    </div>
</div>
<div class="info-loop">
    <div class="row">
        <div class="col-md-4">Address</div>
        <div class="col-md-8">@Model.Address</div>
    </div>
</div>
<div class="info-loop">
    <div class="row">
        <div class="col-md-4">Customer id</div>
        <div class="col-md-8">@Model.UserId</div>
    </div>
</div>
<div class="info-loop">
    <div class="row">
        <div class="col-md-4">Date of Birth</div>
        <div class="col-md-8">@Model.DateofBirth</div>
    </div>
</div>
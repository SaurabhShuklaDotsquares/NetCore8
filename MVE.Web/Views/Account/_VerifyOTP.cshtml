@model TCP.Core.Models.RegisterViewModel
@using TCP.Core.Code.LIBS;
@inject Microsoft.Extensions.Configuration.IConfiguration Configuration
@{
    ViewData["Title"] = "Sign Up";
}


<form method="post" asp-controller="Account" asp-action="VerifyOTP" id="form-verifyOtp">
    <input type="hidden" asp-for="Id" />
    <div class="row no-gutters">
        <div class="col-md-6">
            <div class="bg-block text-center">
                <h3>Welcome to</h3>
                <img src="@SiteKeys.Domain/images/login-logo.png" alt="">
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-block">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><img src="@SiteKeys.Domain/images/close-btn.png" alt=""></button>
                <h2>OTP Verification</h2>
                <div class="form-group row">                 

                    <div class="col-md-7 align-items-center">
                        <label class="req">OTP</label>
                        <input type="text" asp-for="EmailOtp" class="form-control name-icon" placeholder="Enter OTP">
                        <span asp-validation-for="EmailOtp" class="text-danger"></span>
                    </div>
                    <div class="col-md-5 align-items-center text-left" style="margin-top: 38px;">
                        <div id="timer"></div>
                    </div>
                </div>             

                <div class="form-group text-center m-0">
                    <button type="submit" class="btn-custom">Verify</button>
                    <button type="button" oncontextmenu="return false" asp-action="ResendOTP" asp-controller="Account" class="btn-custom" id="resendOtp_btn">Resend</button>
                </div>
            </div>
        </div>
    </div>
</form>

@await Html.PartialAsync("_ValidationScriptsPartial")
<script src="~/js/custom/account/account-index.js" asp-append-version="true"></script>

@model TCP.Core.Models.ForgetPasswordViewModel
@using TCP.Core.Code.LIBS;
@{
    ViewData["Title"] = "Forgot your password?";
}
<form method="post" asp-controller="Account" asp-action="forgotpassword" id="form-forgotpassword">
    <div class="row no-gutters">
        <div class="col-md-6">
            <div class="bg-block text-center">
                <h3>Welcome to</h3>
                <img src="@Model.LogoImageNameDark" alt="">
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-block">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><img src="@SiteKeys.Domain/images/close-btn.png" alt=""></button>
                <h2><b>Forgot</b> Password</h2>
                <div class="form-group">
                    <input asp-for="Email" type="email" class="form-control email-icon" placeholder="Enter Your Email">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>                           
                <div class="form-group text-center">
                    <button type="button" class="btn-custom" id="forgotpassword-submit">Submit</button>
                </div>                              
            </div>
        </div>
    </div>
</form>

@await Html.PartialAsync("_ValidationScriptsPartial")
<script src="~/js/custom/account/account-index.js" asp-append-version="true"></script>
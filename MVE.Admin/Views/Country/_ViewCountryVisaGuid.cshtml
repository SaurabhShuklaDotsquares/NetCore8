@model MVE.Admin.ViewModels.VisaGuideViewModels
@using MVE.Core.Code.LIBS;
@using MVE.Core.Models.Others
@{
    var headerModel = new ModalHeader { Heading = "Visa Guide Details" };
}

<section class="content">
    <div class="box">
        <div class="box-body">
            <partial name="_ModalHeader" model="headerModel" />
            <input type="hidden" asp-for="Id" />
            @if (Model.PageTitle!=null || Model.ContentData!=null)
            {
                <div class="col-md-12">
                    <div class="table-responsive">
                    <table class="table table-hover table-striped responsive">
                        <tbody>
                            <tr>
                                <th scope="row">Title</th>
                                <td>@Model.PageTitle</td>
                            </tr>
                            <tr>
                                <th scope="row">Description</th>
                                <td class="text-justify">@Html.Raw(Model.ContentData)</td>
                            </tr>
                        </tbody>
                    </table>
                    </div>
                </div>
            }else
            {
                <div class="col-md-12">
                    <table class="table table-hover table-striped responsive">
                        <tbody>
                               <h4>Record Not Found</h4>                           
                        </tbody>
                    </table>
                </div>
            }
            


        </div>
    </div>
</section>


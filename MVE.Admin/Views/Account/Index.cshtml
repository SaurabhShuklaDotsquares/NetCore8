@model MVE.Core.Models.LoginViewModel
@inject Microsoft.Extensions.Configuration.IConfiguration Configuration
@{
    ViewData["Title"] = "Log in";
    Layout = "~/Views/Shared/_ExternalLayout.cshtml";
}


<div class="login-logo">
    <img src="@SiteKeys.Domain/images/dark-logo.png" alt="">
</div>
<div class="login-logo">
    <b>Log </b> In
</div>
<div class="card">
    <div class="card-body login-card-body">

        <p class="login-box-msg">Sign in to start your session</p>
      @*  <form method="post" action="/admin/account/index" id="form-signIn">*@
          <form method="post" asp-controller="Account" asp-action="Index" id="form-signIn">
            <partial name="~/Views/Shared/_Notification.cshtml" />
            <div class="input-group mb-3">
                <input asp-for="Email" type="email" class="form-control" value="@Model.Email" placeholder="Email">
                <div class="input-group-append">
                    <div class="input-group-text">
                        <span class="fa fa-envelope"></span>
                    </div>
                </div>
                <span asp-validation-for="Email"></span>
            </div>
            <div class="input-group mb-3">
                <input asp-for="Password" type="password" class="form-control" value="@Model.Password" placeholder="Password" >
                <div class="input-group-append" >
                    <div class="input-group-text">
                        <span class="fa fa-eye-slash" id="toggle_pwd"></span>
                    </div>
                </div>
                <span asp-validation-for="Password"></span>
            </div>
            <div class="row">
                <div class="col-7">
                    <div class="icheck-primary">
                        <input type="checkbox" asp-for="RememberMe">
                        <label for="RememberMe">
                            Remember Me
                        </label>
                    </div>
                </div>
                <div class="col-5">
                    <button type="submit" class="btn btn-primary btn-submit btn-block btn-flat">Sign In</button>
                </div>
            </div>
        </form>
        <p class="mb-1 forgot-pass">
            <a href="~/Account/ForgotPassword">Forgot Password</a>
        </p>
    </div>
</div>

@section scripts{
    <script src="~/js/custom/login/index.js" asp-append-version="true"></script>
    <script>
    var domain = '@SiteKeys.Domain';
    </script>
}
@model MVE.Core.Models.ForgetPasswordViewModel
@{
    ViewData["Title"] = "Forgot your password?";
    Layout = "~/Views/Shared/_ExternalLayout.cshtml";
}

<div class="login-logo">
    <b>Forgot</b> Password
</div>
<div class="card">
    <div class="card-body login-card-body">
        <p class="login-box-msg">Enter your email</p>
        <partial name="~/Views/Shared/_Notification.cshtml" />
        <form asp-action="forgotpassword" asp-controller="account" method="post">
            <div class="input-group mb-3">
                <input asp-for="Email" type="email" class="form-control" placeholder="Email">

                <div class="input-group-append">
                    <div class="input-group-text">
                        <span class="fa fa-envelope"></span>
                    </div>
                </div>
                <span asp-validation-for="Email"></span>
            </div>
            <div class="row">
                <div class="col-7">
                    <p class="mb-1 forgot-pass text-left">
                        <a href="~/Account/Index">Sign In</a>
                    </p>
                </div>
                <div class="col-5 forgot-btns">
                    <button type="submit" class="btn btn-primary btn-submit btn-block">Submit</button>

                </div>

            </div>

        </form>

    </div>
</div>



